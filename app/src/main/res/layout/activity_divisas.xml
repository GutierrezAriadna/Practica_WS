<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ipn.a6im7.webs.Divisas">

<EditText
    android:id="@+id/txtCantidad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="83dp"
    android:ems="10"
    android:hint="Cantidad en pesos"
    android:inputType="number" />

<Spinner
    android:id="@+id/listaDivisas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="46dp"
    android:layout_below="@+id/txtCantidad"
    android:entries="@array/monedas"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/listaDivisas"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="108dp"
    android:onClick="llamarServicioDivisas"
    android:text="Button" />
</RelativeLayout>
