<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ipn.a6im7.webs.Calculadora">

<Spinner
    android:id="@+id/operaciones"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:entries="@array/ops"
    android:layout_marginTop="64dp" />

<EditText
    android:id="@+id/numA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/operaciones"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="46dp"
    android:ems="10"
    android:hint="Escribe un número"
    android:inputType="number" />

<EditText
    android:id="@+id/numB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/numA"
    android:layout_centerVertical="true"
    android:ems="10"
    android:hint="Escribe un número"
    android:inputType="number" />

<Button
    android:id="@+id/iniciar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/numB"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="66dp"
    android:onClick="llamarServicioCalculadora"
    android:text="Realizar operacion" />

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:text="Elije una operación" />
</RelativeLayout>
